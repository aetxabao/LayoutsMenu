<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayoutBeta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="6"
    android:columnCount="2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pmdm.layout.BetaActivity">

    <!-- "GridLayout does not provide support for the principle of weight, as defined in weight.
    In general, it is not therefore possible to configure a GridLayout to distribute excess space
    in non-trivial proportions between multiple rows or columns ... For complete control over
    excess space distribution in a row or column; use a LinearLayout subview to hold the components
    in the associated cell group." -->

    <!-- You can set width of every child dynamically
    http://stackoverflow.com/questions/10016343/gridlayout-not-gridview-how-to-stretch-all-children-evenly -->

    <Button android:id="@+id/BtnGrid0"
        android:onClick="onClickNumber"
        android:text="0"/>

    <Button android:id="@+id/BtnGrid1"
        android:onClick="onClickNumber"
        android:text="1"/>

    <Button android:id="@+id/BtnGrid2"
        android:onClick="onClickNumber"
        android:text="2"/>

    <Button android:id="@+id/BtnGrid3"
        android:onClick="onClickNumber"
        android:text="3"/>

    <Button android:id="@+id/BtnGrid4"
        android:onClick="onClickNumber"
        android:text="4"/>

    <Button android:id="@+id/BtnGrid5"
        android:onClick="onClickNumber"
        android:text="5"/>

    <Button android:id="@+id/BtnGrid6"
        android:onClick="onClickNumber"
        android:text="6"/>

    <Button android:id="@+id/BtnGrid7"
        android:onClick="onClickNumber"
        android:text="7"/>

    <Button android:id="@+id/BtnGrid8"
        android:onClick="onClickNumber"
        android:text="8"/>

    <Button android:id="@+id/BtnGrid9"
        android:onClick="onClickNumber"
        android:text="9"/>

    <Button android:id="@+id/BtnGridNext"
        android:onClick="onClickNext"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:text="Siguiente"/>


</GridLayout>
